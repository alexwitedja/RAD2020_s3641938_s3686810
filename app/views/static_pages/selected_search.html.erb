<% provide(:selected, "selected") %>
<%= provide(:title, 'Home') %>
<div class="row">
  <div class="col-md-8">
    <div class="container row" style="width:auto;margin: 20px 0">
      <div class="col-md-5 col-xs-12"> 
        <div class="btn-group" role="group" aria-label="Basic example">
          <% selected_selected = (yield(:selected) == "selected") ? 'selected' : '' %>
          <% recent_selected = (yield(:selected) == "recent") ? 'selected' : '' %>
          <%= link_to "Recent Posts", "/home/search?search="+@parameter, :class => "btn btn-primary #{recent_selected}" %>
          <%= link_to "Selected Posts", "/selected/search?search="+@parameter, :class => "btn btn-primary #{selected_selected}" %>
          <% if logged_in? %>
            <%= link_to "My Settings", settings_profile_path, :class => "btn btn-primary" %>
          <% end %>
        </div>
      </div>

      <form action="/selected/search" method="get" class="col-md-5 col-xs-12">
      <div class="input-group">  
        <%= search_field_tag :search, params[:search], placeholder: "Dearch", class: "form-control" %>  
        <div class="input-group-btn">  
          <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>  
        </div>  
      </div>  
      </form>
 

      <div class="col-md-2" style="padding:0;text-align:right;" >
        <%= link_to "New Post", "/posts/new", :class => "btn btn-primary" %>
      </div>
    </div>
    <%= render @selected_posts %>
  </div>
  <div class="col-md-4">
    <div>
     <%= render 'recent_users' %>
    </div>
    <div>
      <%= render 'topics' %>
    </div>
      <%= render 'popular_posts' %>
    <div>
    </div>
    <div>
      <%= render 'link' %>
    </div>
  </div>
</div>