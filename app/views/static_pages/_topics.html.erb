<div class="home-cards">
  <p>Topic</p>
  <% topics = get_topics %>
  <% topics.each do |topic| %>
    <div class="col-md-2" style="margin:0 2vh;">
      <% # conditional css %>
      <% css_class = (!@topics.empty?) ? 'selected' : '' %>
      <%= button_tag "#{topic}", type: "button", class: "btn btn-light topic #{css_class}", :onClick => "toggleButton(this)" %>      
    </div>
  <% end %>
</div>

<script>
  function toggleButton(e) {
    e.classList.toggle("selected")
  }
</script>