<% provide(:title, @user.email) %>
<div class="container">
  <aside class="col-md-12">
      <div id="grav-container"><%= user_avatar @user %></div>
    </div>
    <section class="user-info row">
      <h1><%= @user.name %></h1>
      <p><%= @user.email %></p>
      <p><%= @user.mobile %></p>
    </section>
  </aside>
</div>
<div class="container-fluid">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-12">
        <h2>My Posts</h2>
        <div><%= render @posts %></div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-12">
        <h2>My Comments</h2>
        <div><%= render @comments %></div>
      </div>
  </div>
</div>
