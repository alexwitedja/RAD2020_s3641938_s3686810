<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <%= link_to "News+", '/home', id: "logo" %>
      </ul>
      <ul class="nav navbar-nav navbar-center">
        <li><%= link_to "Home",   '/home' %></li>
        
        <li>
          <%= form_for("#") do |f| %>
          <%= f.collection_select :topic, get_popular_topics, :to_s, :to_s, class: 'form-control' %>
          <% end %>
        </li>


        <% if logged_in? %>
          <li><%= link_to current_user.name, current_user %></li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to user_avatar(current_user, size:20), logout_path, method: :delete %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>